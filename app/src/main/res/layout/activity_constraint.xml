<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.myapplication.Layouts.ConstraintActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle_constraint"
        style="@style/bold_20_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/form_text_title"
        android:textColor="#808080"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_name_cons"
        style="@style/bold_20_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:hint="@string/et_name"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#808080"
        app:layout_constraintStart_toStartOf="@id/tvTitle_constraint"
        app:layout_constraintEnd_toEndOf="@id/tvTitle_constraint"
        app:layout_constraintTop_toBottomOf="@id/tvTitle_constraint" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_email_cons"
        style="@style/bold_20_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:hint="@string/et_email"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#808080"
        app:layout_constraintStart_toStartOf="@id/et_name_cons"
        app:layout_constraintEnd_toEndOf="@id/et_name_cons"
        app:layout_constraintTop_toBottomOf="@id/et_name_cons" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_praise_cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border"
        android:minHeight="48dp"
        android:padding="15dp"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="@id/et_email_cons"
        app:layout_constraintEnd_toEndOf="@id/et_email_cons"
        app:layout_constraintTop_toBottomOf="@id/et_email_cons" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_feedback_cons"
        style="@style/bold_20_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border"
        android:hint="@string/et_feedback"
        android:lines="5"
        android:padding="10dp"
        android:textColorHint="#808080"
        app:layout_constraintStart_toStartOf="@id/sp_praise_cons"
        app:layout_constraintEnd_toEndOf="@id/sp_praise_cons"
        app:layout_constraintTop_toBottomOf="@id/sp_praise_cons" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/chk_praise_cons"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:buttonTint="@color/white"
        app:layout_constraintStart_toStartOf="@id/et_feedback_cons"
        app:layout_constraintTop_toBottomOf="@id/et_feedback_cons"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_remember_cons"
        style="@style/bold_20_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="30dp"
        android:text="@string/tv_check"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/et_feedback_cons"
        app:layout_constraintEnd_toEndOf="@id/et_feedback_cons"
        app:layout_constraintTop_toBottomOf="@id/et_feedback_cons" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_feedback_cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/white"
        android:foreground="@drawable/ripple_bg"
        android:text="@string/btn_send"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/chk_praise_cons"
        app:layout_constraintEnd_toEndOf="@id/chk_praise_cons"
        app:layout_constraintTop_toBottomOf="@id/tv_remember_cons" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_cons"
        style="@style/bold_20_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="#808080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_feedback_cons" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="32dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/sp_praise_cons"
        app:layout_constraintTop_toTopOf="@+id/et_email_cons"
        app:srcCompat="@drawable/drop" />

</androidx.constraintlayout.widget.ConstraintLayout>