<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:columnCount="1"
    android:rowCount="8"
    tools:context=".GridActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle_grid"
        style="@style/bold_20_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:layout_marginRight="10dp"
        android:text="Enter Feedback details to send to the developer"
        android:textColor="#808080" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_name_grid"
        style="@style/bold_20_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border"
        android:hint="Your name"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="#808080" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_email_grid"
        style="@style/bold_20_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border"
        android:hint="Your Email"
        android:padding="10dp"
        android:textColorHint="#808080"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_praise_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/border"
        android:padding="10dp"
        android:spinnerMode="dialog"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_feedback_grid"
        style="@style/bold_20_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border"
        android:hint="Feedback Details.."
        android:lines="5"
        android:padding="10dp"
        android:textColorHint="#808080" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:columnCount="2">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_praise_grid"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/et_feedback_rel"
            android:layout_margin="15dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/white"
            tools:ignore="NotSibling" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_remember_grid"
            style="@style/bold_20_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Would you like ?"
            android:textColor="#808080" />

    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_feedback_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chk_praise_rel"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/white"
        android:foreground="@drawable/ripple_bg"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/black"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_grid"
        style="@style/bold_20_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Enter Feedback  developer"
        android:textColor="#808080" />

</GridLayout>