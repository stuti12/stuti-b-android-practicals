<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".layout.GridActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:columnCount="1"
        android:rowCount="8">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle_grid"
            style="@style/bold_20_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="@string/form_text_title"
            android:textColor="#808080"
            android:textSize="25dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_name_grid"
            style="@style/bold_20_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border"
            android:hint="@string/et_name"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#808080" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email_grid"
            style="@style/bold_20_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border"
            android:hint="@string/et_email"
            android:padding="10dp"
            android:textColorHint="#808080"
            tools:ignore="TouchTargetSizeCheck" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/border"
            android:columnCount="2"
            android:rowCount="1">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_praise_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginHorizontal="25dp"
                android:spinnerMode="dialog" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_weight="2"
                android:src="@drawable/drop_down" />
        </GridLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_feedback_grid"
            style="@style/bold_20_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border"
            android:hint="@string/et_feedback"
            android:lines="5"
            android:padding="10dp"
            android:textColorHint="#808080" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:columnCount="2">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chk_praise_grid"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/et_feedback_rel"
                android:layout_margin="15dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/white"
                tools:ignore="NotSibling" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_remember_grid"
                style="@style/bold_20_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/tv_check"
                android:textColor="#808080" />

        </GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_feedback_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/white"
            android:foreground="@drawable/ripple_bg"
            android:text="@string/btn_send"
            android:textAllCaps="false"
            android:textColor="@color/black"
            tools:ignore="TextContrastCheck" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_grid"
            style="@style/bold_20_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#808080" />

    </GridLayout>
</ScrollView>