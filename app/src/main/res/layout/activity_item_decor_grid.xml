<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecycleViewPractical.ItemDecoration.ItemDecorGridActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_recycleview"
        android:textAlignment="center"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/purple_200" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        app:layout_constraintStart_toStartOf="@id/headerTextView"
        app:layout_constraintEnd_toEndOf="@id/headerTextView"
        app:layout_constraintTop_toBottomOf="@id/headerTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headerTextView"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
